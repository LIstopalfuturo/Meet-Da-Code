<div class="container">
    <div class="jumbotron text-center my-4">
        <h1 class="display-4">Welcome to Tip Tracker</h1>
        <p class="lead">Track, analyze, and optimize your tip earnings with ease.</p>
        {{#unless logged_in}}
        <div class="mt-4">
            <a href="/login" class="btn btn-primary btn-lg mx-2">Login</a>
            <a href="/signup" class="btn btn-success btn-lg mx-2">Sign Up</a>
        </div>
        {{/unless}}
    </div>

    <div class="main-content">
        {{#if logged_in}}
        <div class="row">
            <!-- Quick Access Section -->
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-4">Quick Access</h5>
                        <div class="d-flex justify-content-evenly">
                            <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
                            <a href="/analytics" class="btn btn-info">View Analytics</a>
                            <button class="btn btn-success" id="quickTipBtn">Add Quick Tip</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity Section -->
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-4">Recent Activity</h5>
                        {{#if recentTips}}
                            <ul class="list-group">
                            {{#each recentTips}}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    ${{this.amount}}
                                    <span class="badge bg-primary rounded-pill">{{format_date this.shift_date}}</span>
                                </li>
                            {{/each}}
                            </ul>
                        {{else}}
                            <p class="text-center mb-0">No recent tips to display.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Track Tips</h5>
                        <p class="card-text">Easily log and manage your daily tips.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Analyze Earnings</h5>
                        <p class="card-text">View detailed analytics and trends.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Secure Storage</h5>
                        <p class="card-text">Keep your earnings data safe and organized.</p>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>

{{#if logged_in}}
<script>
document.getElementById('quickTipBtn').addEventListener('click', async () => {
    try {
        const response = await fetch('/api/tips/quick', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
        });

        if (response.ok) {
            window.location.reload();
        } else {
            alert('Failed to add quick tip');
        }
    } catch (err) {
        console.error('Error:', err);
        alert('Failed to add quick tip');
    }
});
</script>
{{/if}}
