<div class="modal fade" id="newTipModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Tip Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="new-tip-form">
                    <div class="mb-3">
                        <label for="tip-amount" class="form-label">Amount</label>
                        <input type="number" step="0.01" class="form-control" id="tip-amount" required>
                    </div>
                    <div class="mb-3">
                        <label for="shift-type" class="form-label">Shift Type</label>
                        <select class="form-select" id="shift-type" required>
                            <option value="day">Day</option>
                            <option value="night">Night</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="shift-date" class="form-label">Date</label>
                        <input type="date" class="form-control" id="shift-date" required>
                    </div>
                    <div class="mb-3">
                        <label for="hours-worked" class="form-label">Hours Worked</label>
                        <input type="number" step="0.5" class="form-control" id="hours-worked" required>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="notes"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save-tip">Save Tip</button>
            </div>
        </div>
    </div>
</div> 